// schema.prisma


generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL") // precisa existir no .env
}

model User {
  id        String      @id @default(auto()) @map("_id") @db.ObjectId
  email     String      @unique
  name      String?

  residencies Residency[] @relation("Owner")

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Residency {
  id            String   @id @default(auto()) @map("_id") @db.ObjectId
  title         String
  description   String
  price         Int
  type          String

  // LOCALIZAÇÃO
  address       String
  city          String
  region        String?
  country       String

  image         String
  facilities    Json
  userEmail     String

  owner         User     @relation("Owner", fields: [userEmail], references: [email])

  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  // CLASSIFICAÇÃO
  property  String?
  business  String?
  highlight     Boolean  @default(false)

  // DADOS
  code          String
  bedrooms      Int?
  bathrooms     Int?
  garage        Int?
  area          Int?
  financing     String?
  downPayment   Int?
  iptu          Int?
  carrossel     Json?
}
